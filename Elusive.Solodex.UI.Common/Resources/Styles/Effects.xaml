<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Elusive.Solodex.UI.Common;component/Resources/Styles/Colors.xaml" />
    </ResourceDictionary.MergedDictionaries>


    <DropShadowEffect x:Key="WhiteDropShadow"
                      BlurRadius="0"
                      Direction="315"
                      Opacity="0.8"
                      ShadowDepth="1.0"
                      Color="White" />

    <DropShadowEffect x:Key="BlackDropShadow"
                      BlurRadius="0"
                      Direction="315"
                      Opacity="0.8"
                      ShadowDepth="1.0"
                      Color="Black" />

    <DropShadowEffect x:Key="InnerBorderShadow"
                      BlurRadius="10"
                      Opacity="0.8"
                      ShadowDepth="0"
                      Color="DarkGray" />

    <DropShadowEffect x:Key="DialogDropShadow"
                      BlurRadius="10"
                      Direction="315"
                      Opacity="0.6"
                      ShadowDepth="5" />

    <DropShadowEffect x:Key="ButtonDropShadow"
                      BlurRadius="4"
                      Direction="315"
                      Opacity="0.6"
                      ShadowDepth="2"
                      Color="{StaticResource DarkGrayColor}" />
</ResourceDictionary>